<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbarUser.ejs') %>

<body>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-dark" href="/admin/categories/new">Criar nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category=>{ %>
                    <tr>
                    <th><%- category.id%></th>
                    <th><%- category.title %></th>
                    <th><%- category.slug %></th>
                    <th>
                        <a class="btn btn-primary" href="/admin/categories/edit/<%- category.id %>">Editar</a>
                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmarDelete(event, this)">
                            <input type="hidden" name="id" value="<%- category.id %>">
                            <button class="btn btn-dark">Excluir</button>
                        </form>
                        
                    </th>
                    </tr>
                <% }); %>


        
            </tbody>
        </table>
    </div>

</body>
<%- include('../../partials/footer.ejs') %>


<script>
    function confirmarDelete(event,form){
        event.preventDefault();
        var confirmar = confirm('Você quer deletar essa categoria?');
        if(confirmar){
            form.submit();
        }
    }
</script>