    .container{
        margin-top:50px;
    }
    .noticias{
        max-width:930px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
    }
    .card{
        display:block;
        margin:0 auto;
        float:left;
        margin:10px;
        border:1px solid gray;
    }
    .card h4{
        text-align: justify;
        border-radius: 10px;
        boder:1px solid black;
    }
    .card-title{
        margin:10px;
    }
    @media(max-width:600px){
        .card{
            float:none;
            margin:0 auto;
            margin-bottom:30px;
        }
    }
</style>
